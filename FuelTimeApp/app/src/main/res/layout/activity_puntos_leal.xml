<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context=".Puntos_LealFragment">

    <ImageView
        android:id="@+id/imvLeal"
        android:layout_width="85dp"
        android:layout_height="89dp"
        android:layout_gravity="left"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/leal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tvInfoUsu"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="InformaciÃ³n del Usuario"
            android:textColor="#201DB6"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imvUsuLeal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="21dp"
            android:layout_weight="1"
            android:src="@drawable/perfil" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvInfoPuntosLeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="49dp"
        android:text="Puntos:  300 puntos"
        android:textColor="#201DB6"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edtUsuarioLeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Ingresar Usuario"
        android:inputType="textEmailAddress"
        android:textColor="#040404"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnConectarLeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#FCD200"
        android:text="Conectar Con Leal" />

</LinearLayout>